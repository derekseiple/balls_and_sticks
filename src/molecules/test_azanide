import unittest
from src.utils.point import Point
from src.molecules.azanide import AzanidePositions


class TestAzanidePositions(unittest.TestCase):

    def test_works(self):
        azanide = AzanidePositions()

        # Rotate the molecule. List position should stay the same, but 3D position should change.
        azanide.translate(Point(1.0, 0.0, 0.0))

        self.assertAlmostEqual(1.0, azanide.N.position.x)
        self.assertAlmostEqual(0.0, azanide.N.position.y)
        self.assertAlmostEqual(0.0, azanide.N.position.z)

        # Translate the molecule. List position should stay the same, but 3D position should change.
        azanide.rotate_degrees(90)

        self.assertAlmostEqual(0.0, azanide.N.position.x)
        self.assertAlmostEqual(1.0, azanide.N.position.y)
        self.assertAlmostEqual(0.0, azanide.N.position.z)
